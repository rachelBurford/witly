<%- include("../partials/_head") -%>

<% if (session !== null) { %>
    <p class="white">You are logged in</p> 
    <a href="../profile">Add to our blog </a>
    <% } else { %>
            <details>
                <summary>
                    <h1>Login</h1>   
                </summary>
                <div id="signin">
                    <form action="/login" method="post">
                        <div>
                            <label>Username</label>
                            <input type="text" name="username" />
                        </div>
                        <div>
                            <label>Password</label>
                            <input type="password" name="password" />
                        </div>
                        <div>
                            <input class="btn info submit" type="submit" name="Login" />
                        </div>
                    </form>
                </div>
            </details>      
        <div id="need">
            <details>
                <summary>
                    <h1>Need an account?</h1>  
                </summary>
                <div id='needAccount'>
                    <a class="btn info signup" href="../create-Account">Sign Up!</a>
                </div>
            </details>          
        </div>
<% } %>

<%- include("../partials/_footer") -%>